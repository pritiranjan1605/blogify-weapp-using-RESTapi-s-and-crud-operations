<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>blog</title>
</head>

<body>
    <%- include('./partials/nav') %>

        <div class="container" style="margin-top: 30px;">
            <h1>
                <%= blog.title %>
            </h1>
            <img src="<%= blog.coverimageurl %>" alt="" srcset=""
                style="width: 500px;height: 500px; margin-left: 50px;margin-top: 50px;margin-bottom: 50px;">
            <pre style="font-family: Georgia, serif;"><%= blog.body %></pre>
        </div>
        <div class="container" style="margin-top: 30px;">
            <img src="<%= `${blog.createdby.profileimageurl}` %>" alt="" srcset="" style="width: 50px;
height: 50px;
border-radius: 50%">
            <%=`${blog.createdby.fullname}` %>
                <br>
                <br>

        </div>
        <div class="container mt-3">
            <h1>Comments <%= comments.length %></h1>
            <% if (locals.user) { %>

                <form method="post" action="/blog/comment/<%= blog._id %>">

                    <div class="mb-3">
                        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                            name="content" placeholder="enter your comment">
                    </div>
                    <button type="submit" class="btn btn-outline-primary" style="margin-bottom: 50px;">add</button>
                </form>
                
                <% } %>
                <div class="mt-3">
                    <% comments.forEach(comment=> { %>
                        <div>
                            <img src="<%= comment.createdby.profileimageurl %>"   width="50px" style="border-radius: 50%;"/>
                            <%= comment.createdby.fullname %><pre style="text-align: left;">
                                <%= comment.content %>
                            </pre>
                        </div>
                        <% }) %>
                </div>
        </div>

        <%- include('./partials/script') %>
</body>

</html>